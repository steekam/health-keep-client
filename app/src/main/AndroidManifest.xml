<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.myhealth">
    <!-- Allow internet connectivity -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.patient.PatientAccountActivity"
            android:label="@string/title_activity_patient_account"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.patient.PatientPrescriptionsActivity"
            android:label="@string/title_activity_patient_prescriptions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.patient.PatientAppointmentsActivity"
            android:label="@string/title_activity_patient_appointments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.patient.PatientDashboardActivity"
            android:label="@string/title_activity_patient_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavDrawer"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.onboarding.OnboardingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.LoginActivity"
            android:parentActivityName=".ui.onboarding.OnboardingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:parentActivityName=".ui.onboarding.OnboardingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RecyclerActivity" />
    </application>

</manifest>